<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       >
      <View
          android:id="@+id/view1"
         android:layout_width="match_parent"
         android:layout_height="95dp"
         android:background="@drawable/view_main" />
      <TextView
          android:id="@+id/txt1"
          android:textColor="@color/white"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Hoşgeldiniz"
          android:paddingTop="15dp"
          android:textSize="@dimen/_21ssp"
          android:layout_centerHorizontal="true"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
         android:text="Hayır Hesenat Uygulaması"
         android:paddingTop="@dimen/_5sdp"
         android:textSize="@dimen/_15ssp"
         android:textColor="@color/white"
         android:layout_centerHorizontal="true"
         android:layout_below="@id/txt1"/>
      <TextView
          android:id="@+id/txt2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
         android:layout_centerHorizontal="true"
         android:text="KULLANICI TÜRÜNÜ SEÇİNİZ"
         android:textColor="@color/black"
         android:textStyle="bold"
          android:textSize="@dimen/_17ssp"
         android:paddingTop="@dimen/_25sdp"
         android:layout_below="@id/view1"/>
      <FrameLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
         android:layout_below="@id/txt2"
          android:paddingTop="@dimen/_35sdp"
         android:paddingHorizontal="@dimen/_50sdp">
         <Button
             android:id="@+id/btn1"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
            android:text="YARDIM ALAN GİRİŞİ"
            android:textStyle="bold"
            android:textSize="@dimen/_15ssp"
            android:background="@drawable/btn_custom"/>
         <Button
            android:id="@+id/btn2"
            android:layout_marginTop="@dimen/_55sdp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
            android:text="GÖNÜLLÜ"
             android:textStyle="bold"
             android:textSize="@dimen/_15ssp"
             android:background="@drawable/btn_custom"/>
         <Button
             android:id="@+id/btn3"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="@dimen/_110sdp"
             android:text="BAĞIŞLAYAN GİRİŞİ"
             android:textStyle="bold"
             android:textSize="@dimen/_15ssp"
             android:background="@drawable/btn_custom"/>
         <Button
             android:id="@+id/btn4"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="@dimen/_165sdp"
             android:text="YÖNETİCİ GİRİŞİ"
             android:textStyle="bold"
             android:textSize="@dimen/_15ssp"
             android:background="@drawable/btn_custom"/>


      </FrameLayout>




   </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>